generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the structure of the Invoice table
model Invoice {
  id            Int      @id @default(autoincrement())
  invoiceNumber String // Unique identifier for each invoice
  clientName    String // Name of the client associated with the invoice
  clientEmail   String // Email address of the client
  clientAddress String // Address of the client
  items         Item[] // One-to-many relationship with Item table
  totalAmount   Float // Total amount payable on the invoice
  dueDate       DateTime // Due date for the invoice
}

// Define the structure of the Item table
model Item {
  id          Int     @id @default(autoincrement())
  description String // Description of the item
  quantity    Int // Quantity of the item
  unitPrice   Float // Unit price of the item
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId   Int // Foreign key referencing the Invoice table
}

// Define the structure of the User table for authentication
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
